#!/usr/bin/env sh

set -e

if ! git status > /dev/null 2>&1; then
  exit 0
fi

artist=$(dotmusic-itunes)

if [ "$artist" = "" ]; then
  exit 0
fi

musicfile=$(git rev-parse --show-toplevel)/.music

if [ ! -f $musicfile ]; then
  touch $musicfile
fi

if ! grep -iqx "$artist" $musicfile; then
  echo $artist >> $musicfile
fi
