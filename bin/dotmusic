#!/usr/bin/env sh

set -e

if ! git rev-parse --is-inside-work-tree &> /dev/null ; then
  exit 0
fi

musicfile=$(git rev-parse --show-toplevel)/.music

artist=$(dotmusic-itunes)

if [ "$artist" = "" ]; then
  exit 0
fi

if [ ! -f $musicfile ]; then
  touch $musicfile
fi

if ! grep -iqx "$artist" $musicfile; then
  echo $artist >> $musicfile
fi
